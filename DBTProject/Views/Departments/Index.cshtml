@model IEnumerable<DBTProject.Department>

@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="departments" class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>
                Departamento
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.DepartmentName, "Edit", new { id = item.DepartmentID })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentID })
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#departments").DataTable();
        })
    </script>
}